{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "dom",
      "es2020",
      "ES6"
    ],
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/*", 
    "**/__e2e__/*"
  ]
 }